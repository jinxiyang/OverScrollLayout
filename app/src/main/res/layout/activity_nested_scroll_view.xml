<?xml version="1.0" encoding="utf-8"?>
<com.yang.overscrolllayout.OverScrollLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overScrollLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#777777">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="我是第1个" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="我是第2个" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="我是第3个" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="我是第4个" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="我是第5个" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="我是第6个" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="我是第7个" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="我是第8个" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="我是第9个" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="我是第10个" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="我是第11个" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="我是第12个" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <TextView
        android:id="@+id/tvTrack"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:textColor="#222222"
        android:textSize="16sp" />

</com.yang.overscrolllayout.OverScrollLayout>